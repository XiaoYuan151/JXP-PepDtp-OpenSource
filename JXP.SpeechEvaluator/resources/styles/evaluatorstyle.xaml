				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="auto" />
			</Grid.ColumnDefinitions>
			<Border
				Name="BgInner"
				Grid.Column="1"
				Margin="0"
				CornerRadius="2"
				SnapsToDevicePixels="True"
				Background="#B8886C" />
			<RepeatButton
				Grid.Column="0"
				IsTabStop="False"
				Interval="50"
				Margin="0,-1,5,-1"
