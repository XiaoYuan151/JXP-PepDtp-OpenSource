						Name="HorizontalLargeDecrease"
						Command="ScrollBar.PageLeftCommand"
						IsTabStop="False"
						Interval="50"
						Style="{DynamicResource ScrollBarTrackButton}" />
				</Track.DecreaseRepeatButton>
				<Track.Thumb>
					<Thumb
						MinWidth="10"
