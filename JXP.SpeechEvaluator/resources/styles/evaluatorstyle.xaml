	<Style
		TargetType="{x:Type ToggleButton}"
		x:Key="IndexPageToggleStyle">
		<Setter
			Property="Focusable"
			Value="False" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type ToggleButton}">
					<Border
						Name="PART_Expand"
						Background="{DynamicResource IndexPageCollapsedImg}"
						Margin="1"
						Padding="0"
						Width="20" />
					<ControlTemplate.Triggers>
						<Trigger
							Property="ToggleButton.IsChecked"
							Value="True">
							<Setter
								TargetName="PART_Expand"
								Value="{DynamicResource IndexPageExpandedImg}"
								Property="Background" />
						</Trigger>
						<Trigger
							Property="UIElement.IsMouseOver"
							Value="True" />
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition
									Property="UIElement.IsMouseOver"
									Value="True" />
								<Condition
									Property="ToggleButton.IsChecked"
									Value="True" />
							</MultiTrigger.Conditions>
						</MultiTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
