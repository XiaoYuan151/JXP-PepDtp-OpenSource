	<Style
		TargetType="{x:Type TreeViewItem}"
		x:Key="IndexPageItemContainerStyle">
		<Setter
			Property="Background"
			Value="#00FFFFFF" />
		<Setter
			Property="HorizontalAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalAlignment"
			Value="Stretch" />
