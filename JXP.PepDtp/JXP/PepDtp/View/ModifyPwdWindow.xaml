			<Style
				TargetType="{x:Type toolkit:WatermarkPasswordBox}"
				x:Key="WatermarkPasswordBoxStyle2">
				<Setter
					Property="BorderThickness"
					Value="1" />
				<Setter
					Property="Background"
					Value="#00FFFFFF" />
				<Setter
					Property="BorderBrush"
					Value="#009999" />
				<Setter
					Property="VerticalAlignment"
					Value="Center" />
				<Setter
					Property="HorizontalAlignment"
					Value="Stretch" />
				<Setter
					Property="FontSize"
					Value="18" />
				<Setter
					Property="FontFamily"
					Value="SimSun" />
				<Setter
					Property="toolkit:WatermarkPasswordBox.PasswordChar"
					Value="●" />
				<Setter
					Property="InputMethod.IsInputMethodEnabled"
					Value="False" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type toolkit:WatermarkPasswordBox}">
							<Grid>
								<Border
									Name="Border"
									BorderBrush="{TemplateBinding BorderBrush}"
									BorderThickness="{TemplateBinding BorderThickness}"
									Background="{TemplateBinding Background}"
									CornerRadius="5">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition />
											<ColumnDefinition
												Width="25" />
										</Grid.ColumnDefinitions>
										<Grid>
											<ScrollViewer
												Name="PART_ContentHost"
												SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
											<TextBlock
												Name="PART_PasswordShower"
												Focusable="False"
												Padding="0"
												Margin="2"
												HorizontalAlignment="Stretch"
												VerticalAlignment="Center"
												Visibility="Collapsed"
												IsHitTestVisible="False"
												Background="#00FFFFFF"
												FontSize="{TemplateBinding FontSize}"
												Text="{Binding Path=(attachproperty:PasswordBoxHelper.Password), RelativeSource={RelativeSource TemplatedParent}}" />
											<ContentPresenter
												Name="PART_WatermarkHost"
												Content="{TemplateBinding toolkit:Watermark}"
												HorizontalAlignment="Center"
												IsHitTestVisible="False"
												Margin="{TemplateBinding Padding}"
												Visibility="Collapsed"
												VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
												<ContentPresenter.ContentTemplate>
													<Binding
														Path="WatermarkTemplate"
														RelativeSource="{RelativeSource TemplatedParent}">
														<BindingBase.TargetNullValue>
															<DataTemplate>
																<ContentControl
																	Foreground="#FF808080"
																	Focusable="False"
																	Content="{Binding}" />
															</DataTemplate>
														</BindingBase.TargetNullValue>
													</Binding>
												</ContentPresenter.ContentTemplate>
											</ContentPresenter>
										</Grid>
										<Button
											Name="PART_EyeToggle"
											Grid.Column="1"
											IsTabStop="True"
											Focusable="False"
											BorderBrush="{TemplateBinding BorderBrush}"
											BorderThickness="{TemplateBinding BorderThickness}"
											Foreground="#009999"
											IsEnabled="True"
											Style="{DynamicResource PasswordBoxButtonStyle}"
											Background="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
									</Grid>
								</Border>
								<Border
									Name="MouseOverVisual"
									BorderThickness="0"
									CornerRadius="10"
									Opacity="0" />
								<Border
									Name="FocusVisual"
									BorderThickness="0"
									CornerRadius="10"
									Opacity="0" />
							</Grid>
							<ControlTemplate.Triggers>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition
											Property="toolkit:WatermarkTextBox.KeepWatermarkOnGotFocus"
											Value="False" />
										<Condition
											Property="UIElement.IsFocused"
											Value="False" />
										<Condition
											Property="Text"
											Value="" />
									</MultiTrigger.Conditions>
									<Setter
										TargetName="PART_WatermarkHost"
										Property="Visibility"
										Value="Visible" />
								</MultiTrigger>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition
											Property="toolkit:WatermarkTextBox.KeepWatermarkOnGotFocus"
											Value="True" />
										<Condition
											Property="Text"
											Value="" />
									</MultiTrigger.Conditions>
									<Setter
										TargetName="PART_WatermarkHost"
										Property="Visibility"
										Value="Visible" />
								</MultiTrigger>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="MouseOverVisual"
										Property="UIElement.Opacity"
										Value="1" />
								</Trigger>
								<Trigger
									Property="UIElement.IsFocused"
									Value="True">
									<Setter
										TargetName="FocusVisual"
										Property="UIElement.Opacity"
										Value="1" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="False">
									<Setter
										Value="{DynamicResource SystemColors.GrayTextBrushKey}"
										Property="Foreground" />
								</Trigger>
								<Trigger
									Property="Text"
									Value="">
									<Setter
										TargetName="PART_EyeToggle"
										Property="IsEnabled"
										Value="False" />
									<Setter
										TargetName="PART_EyeToggle"
										Property="Visibility"
										Value="Hidden" />
								</Trigger>
								<DataTrigger
									Value="True"
									Binding="{Binding IsPressed, ElementName=PART_EyeToggle}">
									<Setter
										TargetName="PART_PasswordShower"
										Property="Visibility"
										Value="Visible" />
									<Setter
										TargetName="PART_ContentHost"
										Property="Visibility"
										Value="Hidden" />
								</DataTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
